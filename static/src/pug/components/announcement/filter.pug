mixin filter( ...tags )
  section.filter
    button#filter__button.filter__button.button
      span 過濾器
      span#button__icon.button__icon
    +filter__time()
    +filter__tags( ...tags )

mixin filter__tags( ...tags )
  article#filter__tags.filter__tags.filter__tags--hidden.tags
    each tag in tags
      button( id=`tags__tag--${ tag }` class=`tags__tag--${ tag } tags__tag` )= tag

mixin filter__time()
  article#filter__time.filter__time.filter__time--hidden.time
    aside
      label 開始日期
      input.time__date( type='date' )
    aside
      label 結束日期
      input.time__date( type='date' )